@model Everestfcsweb.Entities.SystemTenantAccount
@{
    var Countrylists = ViewData["SystemCountrylists"] as List<SelectListItem>;
    var Phonecodelists = ViewData["Systemphonecodelists"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">Tenant Data</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="Tenantid" class="form-control form-control-sm font-weight-light" id="SystemTenantAccountid" hidden />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Company Name</label>
                <input class="form-control form-control-sm font-weight-light" asp-for="Tenantname" id="SystemTenantAccountTenantnameid" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Company Email</label>
                <input class="form-control form-control-sm font-weight-light" type="email" asp-for="TenantEmail" id="SystemTenantAccountTenantEmailid" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Phone Number</label>
                <div class="input-group input-group-sm border">
                    <div class="input-group-prepend">
                        <select class="form-control form-control-sm font-weight-light input-group-text" asp-for="Phoneid" id="inputGroup-sizing-sm" asp-items="@Phonecodelists">
                            <option value="0">Code</option>
                        </select>
                    </div>
                    <input type="number" class="form-control form-control-sm" aria-label="Small" asp-for="Phonenumber" id="PhonenumberId" aria-describedby="inputGroup-sizing-sm">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Company PIN</label>
                <input class="form-control form-control-sm font-weight-light" asp-for="TenantPIN" id="SystemTenantAccountTenantpinid" />
            </div>
        </div>
        <div class="col-sm-3" hidden>
            <div class="form-group">
                <label class="font-weight-light">Company Reference</label>
                <input class="form-control form-control-sm font-weight-light" asp-for="TenantReference" id="SystemTenantAccountTenantReferenceid" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Decimals</label>
                <input class="form-control form-control-sm font-weight-light" asp-for="NoOfDecimalPlaces" id="SystemTenantAccountNoofDecimalPlacesid" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Company Logo</label>
                <input class="form-control form-control-sm font-weight-light" type="file" onchange="companyImageFileChanged(event)" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                <label class="font-weight-light">CC Email <input type="checkbox" asp-for="IsCCEmail" id="SystemTenantAccountIsccemailid" /></label>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <label class="font-weight-light">Apply Tax  <input type="checkbox" asp-for="ApplyTax" id="SystemTenantAccountApplyTaxid" /></label>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-light">Send Email <input type="checkbox" asp-for="IsEmailEnabled" id="SystemTenantAccountIsEmailEnabledid" /></label>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <label class="font-weight-light">Send SMS  <input type="checkbox" asp-for="IsSmsEnabled" id="SystemTenantAccountIsSmsEnabledid" /></label>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-light">Truncate Email  <input type="checkbox" asp-for="IsTemplateTrancated" id="SystemTenantAccountIsTemplateTrancatedid" /></label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Country</label>
                <select class="form-control form-control-sm font-weight-light" asp-for="Countryid" asp-items="@Countrylists" id="SystemTenantAccountCountryid">
                    <option>--Select Country--</option>
                </select>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Company Subdomain</label>
                <div class="input-group input-group-sm border">
                    <div class="input-group-prepend">
                        <span class="form-control form-control-sm font-weight-light input-group-text" id="basic-addon1">@@</span>
                    </div>
                    <input class="form-control form-control-sm" aria-label="Small" asp-for="Tenantsubdomain" id="SystemTenantAccountTenantSubdomainid" aria-describedby="basic-addon1">
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">CC Email Address</label>
                <input class="form-control form-control-sm font-weight-light" asp-for="CCEmail" type="email" id="SystemTenantAccountCcEmailid" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-light">Email Server</label>
                <input class="form-control form-control-sm font-weight-light" asp-for="EmailAddress" type="email" id="SystemTenantAccountEmailAddressid" />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-light">Server Password</label>
                <input class="form-control form-control-sm font-weight-light" asp-for="EmailPassword" id="SystemTenantAccountEmailPasswordid" />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-light">Sms Username</label>
                <input class="form-control form-control-sm font-weight-light" asp-for="Messageusername" id="SystemTenantAccountMessageUsernameid" />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-light">Sms Key</label>
                <input class="form-control form-control-sm font-weight-light" asp-for="Messageapikey" id="SystemTenantAccountMessageApiKeyid" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div id="Uttambsolutionsimagespreviewcontainer"></div>
        </div>
        <div class="col-sm-8" hidden>
            <div class="form-group">
                <label class="font-weight-light">Images Url</label>
                <input class="form-control form-control-sm" id="UttambsolutionsimagesurlId" readonly />
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold float-right" type="button" id="SaveSystemTenantsDataBtn" onclick="savesystemtenantaccountsettingdata();">
        <span id="buttonText">SAVE</span><span id="processingSpinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display: none;"></span>
    </button>
</div>
