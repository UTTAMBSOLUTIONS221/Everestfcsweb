@model Everestfcsweb.Models.PriceListData
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">Prist List</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-4">
            <h4 class="text-sm font-weight-light"><b>Price List: </b> @Model.PriceListname</h4>
        </div>
        <div class="col-sm-4">
            <h4 class="text-sm font-weight-light"><b>Date Created: </b> @Model.Datecreated</h4>
        </div>
        <div class="col-sm-4">
            <h4 class="text-sm font-weight-light"><b>Created By: </b> @Model.Createdby</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 table-responsive table-responsive-sm">
            <table class="table table-bordered table-striped compact table-sm table-responsive-sm nowrap text-nowrap" id="AllsystemDataTables">
                <thead>
                    <tr>
                        <th class="font-weight-light">Product</th>
                        <th class="font-weight-light">Station</th>
                        <th class="font-weight-light">Price</th>
                        <th class="font-weight-light">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Pricelistprices != null)
                    {
                        foreach (var item in Model.Pricelistprices)
                        {
                            <tr>
                                <td class="font-weight-light">@item.Productvariationname</td>
                                <td class="font-weight-light">@item.Station</td>
                                <td class="font-weight-light">@item.ProductPrice</td>
                                <td class="font-weight-light">
                                    <a onclick="permanentdeletethis(event)" data-Tablename="PriceListprices" data-Columnidname="PriceListPricesId" data-Entryid="@item.PriceListPricesId" class="btn btn-xs btn-danger">Remove</a>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>