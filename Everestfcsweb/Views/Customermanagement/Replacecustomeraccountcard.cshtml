@model Everestfcsweb.Entities.AccountCardReplaceDetails
@{
    var SystemCardType = ViewData["SystemCardTypelists"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">Replace Account Mask</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="@Model.AccountId" id="CustomerAccountId" hidden />
            <input asp-for="@Model.CardId" id="CustomerCardId" hidden />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label class="font-weight-light">Mask</label>
                <input asp-for="@Model.MaskSno" id="CustomerMaskSnoId" class="form-control form-control-sm font-weight-light" readonly />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Card Type</label>
                <select class="form-control form-control-sm font-weight-light" onchange="Getsystemcardswiththistype(this.value)" id="SystemcardtypeId" asp-items="@SystemCardType">
                    <option value="0">--Select Type ---</option>
                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Card/Mask</label>
                <input placeholder="Mask will be Autogenerated" class="form-control form-control-sm font-weight-light" id="SystemcardvitualmaskId" readonly style="display:none;" />
                <select class="form-control form-control-sm font-weight-light select2" id="SystemcardmaskId">
                    <option value="0">--Select Card/Mask ---</option>
                </select>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" onclick="saveaccountcardreplacedetails();">Replace Mask</button>
</div>