@model Everestfcsweb.Entities.AccountEmployeeProductpolicy
@{
    var Systemproducts = ViewData["SystemProductslists"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">@Model.EmployeeName Account Product  Policy</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="@Model.EmployeeProductId" id="EmployeeProductId" hidden />
            <input asp-for="@Model.EmployeeId" id="PolicyEmployeeId" hidden />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Product</label>
                <select class="form-control form-control-sm font-weight-light" id="SystemEmployeeproductId" asp-for="@Model.ProductVariationId" asp-items="@Systemproducts">
                    <option value="0">--Select Product ---</option>
                </select>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Limit Value</label>
                <input class="form-control form-control-sm" id="EmployeeConsumptionLimitvalueId" asp-for="@Model.LimitValue" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Limit Period</label>
                <select class="form-control form-control-sm font-weight-light" id="EmployeeLimitperiodvalueId" asp-for="@Model.LimitPeriod">
                    <option value="0">--Select Limit Period ---</option>
                    <option value="Daily">Daily</option>
                    <option value="Weekly">Weekly</option>
                    <option value="Monthly">Monthly</option>
                </select>
            </div>
        </div>
    </div>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" onclick="savecustomeraccountemployeeproductpolicy();">Submit</button>
</div>