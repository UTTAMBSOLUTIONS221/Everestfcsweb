@model Everestfcsweb.Entities.CustomerAgreementPayment
@{
    var SystemPaymentmodes = ViewData["SystemPaymentmodeslists"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">Agreement Payment</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="@Model.AgreementId" id="CustomeragreementId" hidden />
            <input  id="CustomerAgreementTypeId" hidden />
            <input  id="CustomerAgreementLpoId" hidden />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Payment Mode</label>
                <select class="form-control form-control-sm font-weight-light" id="PaymentModeId" asp-items="@SystemPaymentmodes">
                    <option value="0">--Select Mode ---</option>
                </select>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Amount</label>
                <input class="form-control form-control-sm" id="CustomerPaidAmountId" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Payment Date</label>
                <input type="datetime-local" class="form-control form-control-sm" id="PaymentDatecreatedId" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label class="font-weight-light">Reference</label>
                <input class="form-control form-control-sm" id="PaymentReferenceId" />
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" onclick="savecustomeragreementpayment();">Register Payment</button>
</div>