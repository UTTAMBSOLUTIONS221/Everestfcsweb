@model Everestfcsweb.Entities.AccountEmployeeTransactionFrequencypolicy
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">@Model.EmployeeName   Account Weekdays  Policy</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="@Model.EmployeeFrequencyId" id="EmployeeFrequencyId" hidden />
            <input asp-for="@Model.EmployeeId" id="PolicyEmployeeId" hidden />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Frequency(count)</label>
                <input class="form-control form-control-sm" id="EmployeeFrequencyCountId" asp-for="@Model.Frequency" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Frequency Period</label>
                <select class="form-control form-control-sm font-weight-light" id="EmployeeFrequencyPeriodId" asp-for="@Model.FrequencyPeriod">
                    <option value="0">--Select Frequency Period ---</option>
                    <option value="Daily">Daily</option>
                    <option value="Weekly">Weekly</option>
                    <option value="Monthly">Monthly</option>
                </select>
            </div>
        </div>
    </div>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" onclick="savecustomeraccountemployeefrequencypolicy();">Submit</button>
</div>