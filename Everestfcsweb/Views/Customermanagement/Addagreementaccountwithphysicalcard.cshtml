@model Everestfcsweb.Entities.CustomerAgreementAccountData
@{
    var SystemEquimentMakes = ViewData["SystemEquimentMakeslists"] as List<SelectListItem>;
    var SystemconsumptionType = ViewData["SystemConsumptionTypelists"] as List<SelectListItem>;
    var SystemCardType = ViewData["SystemCardTypelists"] as List<SelectListItem>;
    var Systemstations = ViewData["Systemstationslists"] as List<SelectListItem>;
    var SystemproductVariations = ViewData["SystemProductslists"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">Customer Agreement Account</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="@Model.AgreementId" id="CustomerAgreementId" hidden />
            <input asp-for="@Model.CreateAccountType" id="CustomerCreateAccountTypeId" hidden />
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Card Type</label>
                <select class="form-control form-control-sm font-weight-light" onchange="Getsystemcardswiththistype(this.value)" id="SystemcardtypeId" asp-items="@SystemCardType">
                    <option value="0">--Select Type ---</option>
                    <option value="1">Virtual Card</option>
                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Card/Mask</label>
                <input placeholder="Mask will be Autogenerated" class="form-control form-control-sm font-weight-light" id="SystemcardvitualmaskId" readonly style="display:none;" />
                <select class="form-control form-control-sm font-weight-light select2" id="SystemcardmaskId">
                    <option value="0">--Select Card/Mask ---</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Consumption Limit Period</label>
                <select class="form-control form-control-sm font-weight-light" id="CustomerAgreementAccountLimitPeriodId" required>
                    <option value="0">--Select Period---</option>
                    <option value="Daily">Daily</option>
                    <option value="Weekly">Weekly</option>
                    <option value="Monthly">Monthly</option>
                </select>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Consumption Limit Type</label>
                <select class="form-control form-control-sm font-weight-light" id="CustomerAgreementAccountLimitTypeId" asp-items="@SystemconsumptionType" required>
                    <option value="0">--Select Limit Type---</option>
                </select>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Consumption Limit Value</label>
                <input class="form-control form-control-sm" type="text" id="CustomerAgreementAccountLimitTypeValueId" required />
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" onclick="savecustomeragreementaccountdetails();">Create Account</button>
</div>