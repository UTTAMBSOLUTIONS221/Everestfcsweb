@model Everestfcsweb.Entities.CustomerAccountTopup
@{
    var SystemPaymentmodes = ViewData["SystemPaymentmodeslists"] as List<SelectListItem>;
    var SystemStations = ViewData["SystemStationslists"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">Account Topups</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="@Model.AccountId" id="TopupAccountId" hidden />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Payment Mode</label>
                <select class="form-control form-control-sm font-weight-light" id="PaymentModeId" asp-items="@SystemPaymentmodes">
                    <option value="0">--Select Mode ---</option>
                </select>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Amount</label>
                <input class="form-control form-control-sm" id="TopupAmountId" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Topup Date</label>
                <input type="datetime-local" class="form-control form-control-sm" id="TopupDatecreatedId" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Station</label>
                <select class="form-control form-control-sm font-weight-light" onchange="Getsystemstationstaffbyid(this.value)" id="SystemStationId" asp-items="@SystemStations">
                    <option value="0">--Select Station ---</option>
                </select>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Station Staff</label>
                <select class="form-control form-control-sm font-weight-light select2" id="SystemstationstaffId">
                </select>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Reference</label>
                <input class="form-control form-control-sm" id="TopupReferenceId" />
            </div>
        </div>
       
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" onclick="savecustomeragreementaccountLeveltopup();">Topup</button>
</div>