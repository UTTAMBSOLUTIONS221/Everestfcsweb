@model Everestfcsweb.Entities.CustomerAccountEquipments;
@{
    var SystemEquimentMakes = ViewData["SystemEquimentMakeslists"] as List<SelectListItem>;
    var SystemproductVariations = ViewData["SystemProductslists"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">Account Equipment</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="@Model.AccountId" id="EquipmentAccountId" hidden />
            <input asp-for="@Model.EquipmentId" id="SystemEquipmentId" hidden />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label class="font-weight-light">Registration No#</label>
                <input class="form-control form-control-sm" asp-for="@Model.EquipmentReg" id="EquipmentRegistrationId" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Equipment Make</label>
                <select onchange="GetEquipmentModels(this.value)" class="form-control form-control-sm font-weight-light" asp-for="@Model.VehicleMakeId" id="EquipmentMakeId" asp-items="@SystemEquimentMakes">
                    <option value="0">--Select Make ---</option>
                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Equipment Model</label>
                <select class="form-control form-control-sm font-weight-light" asp-for="@Model.VehicleModelId" id="EquipmentModelId">
                    <option value="0">--Select Model ---</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Fuel Type</label>
                <select class="form-control form-control-sm font-weight-light" id="EquipmentProductId" asp-for="@Model.ProductVariationId" asp-items="@SystemproductVariations" required>
                    <option value="0">--Select Product---</option>
                </select>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Tank Capacity</label>
                <input class="form-control form-control-sm" type="number" id="TankCapacityId" asp-for="@Model.TankCapacity" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Ordometer Reading</label>
                <input class="form-control form-control-sm" type="number" id="OdometerReadingId" asp-for="@Model.OdometerReading" />
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" onclick="savesystemequipmentdata();">Save</button>
</div>