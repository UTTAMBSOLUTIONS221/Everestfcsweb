@model Everestfcsweb.Entities.LnkDiscountProductModel
@{
    var Systemstations = ViewData["Systemstationslists"] as List<SelectListItem>;
    var Systemproducts = ViewData["SystemProductslists"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">DISCOUNT LIST VALUES </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="@Model.DiscountlistId" id="SystemDiscountlistId" hidden />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-light">Product</label>
                <select class="form-control form-control-sm font-weight-light" id="stationproductId" asp-items="@Systemproducts">
                    <option value="0">--Select Products ---</option>
                </select>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-light">Discount Value</label>
                <input type="number" class="form-control form-control-sm" id="stationdiscountvalueId" />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-light">Start Time</label>
                <input class="form-control form-control-sm" type="time" id="discountliststarttimeId" />
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label class="font-weight-light">End Time</label>
                <input class="form-control form-control-sm" type="time" id="discountlistendtimeId" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Stations</label>
                <select class="form-control form-control-sm font-weight-light select2" multiple="multiple" id="systemstationId" asp-items="@Systemstations">
                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Days Applicable</label>
                <select class="form-control form-control-sm font-weight-light select2" multiple="multiple" id="discountlistdaysId">
                    <option value="Sunday">Sunday</option>
                    <option value="Monday">Monday</option>
                    <option value="Tuesday">Tuesday</option>
                    <option value="Wednesday">Wednesday</option>
                    <option value="Thursday">Thursday</option>
                    <option value="Friday">Friday</option>
                    <option value="Saturday">Saturday</option>
                </select>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" onclick="savesystemdiscountlistvaluedetaildata();">Save</button>
</div>