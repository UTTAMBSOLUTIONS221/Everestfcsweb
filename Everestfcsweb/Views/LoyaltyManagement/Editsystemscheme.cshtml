@model Everestfcsweb.Entities.SystemLoyaltyScheme
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">Scheme</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="@Model.LSchemeId" id="SystemLSchemeId" hidden />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Scheme Name</label>
                <input class="form-control form-control-sm" asp-for="@Model.LSchemeName" required id="SystemLSchemeNameId" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Start Date</label>
                <input class="form-control form-control-sm" asp-for="@Model.StartDate" type="date" required id="SystemSchemeStartDateId" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">End Date</label>
                <input class="form-control form-control-sm" asp-for="@Model.EndDate" type="date" required id="SystemSchemeEndDateId" />
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" onclick="savesystemschemedetaildata();">Save</button>
</div>