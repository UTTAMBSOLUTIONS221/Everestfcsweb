@{
    var Systemstations = ViewData["Systemstationslists"] as List<SelectListItem>;
    var Stationcustomers = ViewData["Stationcreditcustomerlists"] as List<SelectListItem>;
    var StationAttendants = ViewData["Stationattendantlists"] as List<SelectListItem>;
}
<form id="form_id">
    <div class="modal-header">
        <h5 class="text-sm modal-title" id="FuelcardsystemModalLabel">Customer Statement Reading Report</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="font-weight-light">Start Date</label>
                    <input class="form-control form-control-sm" type="date" required name="startdate" id="CustomerstatementreadingstartdateId" />
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="font-weight-light">End Date</label>
                    <input class="form-control form-control-sm" type="date" required name="enddate" id="CustomerstatementreadingenddateId" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">Outlet</label>
                    <select class="form-control form-control-sm select2" name="station" id="CustomerstatementreadingStationId" asp-items="@Systemstations">
                        <option value="">--Select Outlet ---</option>
                        <option value="0">--All---</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">Attendant</label>
                    <select class="form-control form-control-sm select2" name="attendant" id="CustomerstatementreadingAttendantId" asp-items="@StationAttendants">
                        <option value="">--Select--</option>
                        <option value="0">--All---</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">Customer</label>
                    <select class="form-control form-control-sm select2" name="shift" id="CustomerstatementcustomerId" asp-items="@Stationcustomers">
                        <option value="">--Select Customer ---</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
        <button class="btn btn-sm btn-info font-weight-bold" type="button" id="Customerstatementreadingreportbtn" onclick="Generatecustomerstatementreadingreport()">
            <span id="buttonText">GENERATE</span><span id="processingSpinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display: none;"></span>
        </button>
    </div>
</form>

